@import '_config'
@import '../../public/vendor/bootstrap/dist/css/bootstrap.css'


html, body
  margin 0
  padding 0
  width 100%
  height 100%
  font-weight 400
  font-size 18px
  line-height 1.5
  font-family Montserrat, 'Helvetica Neue', Helvetica, Arial, 'ヒラギノ角ゴ Pro W3', 'Hiragino Kaku Gothic Pro', 'Hiragino Sans GB', 'メイリオ', Meiryo, Sans-Serif
  text-rendering optimizelegibility
  font-smoothing antialiased
  background-color snow
  color $text_color

a
  outline none !important

.background
  position absolute
  top 0
  left -5%
  right 0
  bottom 0
  width 110%
  height 100%
  background-image url('./images/001.jpg')
  background-repeat no-repeat
  background-size cover
  background-position 50% 50%
  z-index 0

hr
  border none
  margin 24px auto 48px auto
  width 60px
  height 5px
  background-color $text_color

.navbar
  position absolute
  left 0
  right 0
  top 0
  margin 0
  height 50px
  line-height 50px
  border-width 0
  border-radius 0
  transition background 0.18s $easing

  .container a img
    display inline-block
    margin 0
    padding 0
    width 300px
    vertical-align middle

  .tweet
    position absolute
    display inline-block
    right 150px
    margin 0
    padding 0
    vertical-align middle

  .session .dropdown-toggle
    padding-left 36px
    background-position 6px 13px
    background-size 24px 24px
    background-repeat no-repeat

.wrap
  position fixed
  padding-top 50px
  height 100%
  width 100%
  overflow-x hidden

  section
    display table
    width 100%
    min-height 100%

    .container
      display table-cell
      vertical-align middle

.main
  position absolute
  left 0
  right 0
  bottom 0
  margin 0
  z-index 10

  .title
    float left

    h3
      font-size 56px
      margin-top 10px

    .attention p
      font-size 12px
      margin-bottom 0

  .info
    padding-top 30px

    p
      margin-bottom 5px

.footer
  clear both
  font-size 12px
  padding 30px 0 5px 0
