@import '_config'
@import '../../public/vendor/bootstrap/dist/css/bootstrap.css'


html, body
  margin 0
  padding 0
  width 100%
  height 100%
  font-weight 400
  font-size 14px
  line-height 1.5
  font-family Montserrat, 'Helvetica Neue', Helvetica, Arial, 'ヒラギノ角ゴ Pro W3', 'Hiragino Kaku Gothic Pro', 'Hiragino Sans GB', 'メイリオ', Meiryo, Sans-Serif
  text-rendering optimizelegibility
  font-smoothing antialiased
  background-color black
  color $text_color

a
  outline none !important

.background
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background-image url('./images/main2.jpg')
  background-repeat no-repeat
  background-size cover
  background-position 50% 50%
  z-index 0
  opacity 0.6

hr
  border none
  margin 24px auto 48px auto
  width 60px
  height 5px
  background-color $text_color

.navbar
  position absolute
  left 0
  right 0
  bottom 0
  margin 0
  height 50px
  border-width 0
  background darken(darkslategray, 70%)
  border-radius 0
  transition background 0.18s $easing

  .session .dropdown-toggle
    padding-left 36px
    background-position 6px 13px
    background-size 24px 24px
    background-repeat no-repeat

  &.navbar-transparent
    background-color red
    .navbar-toggle
      border-color transparent
    .navbar-collaps
      box-shadow none
      border-top-color transparent

img.logo-bnzk
  width 300px
  margin-top 20px

.wrap
  padding-top 50px
  height 100%

  section
    display table
    width 100%
    min-height 100%

    .container
      display table-cell
      vertical-align middle

.main
  position relative
  height 100%
  z-index 10

table
  margin 0 auto
  td.left
    text-align left
    span
      background-color gold
  td.right
    text-align right
